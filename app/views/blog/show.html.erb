<div class="blog-article-bg py-5" style="background: linear-gradient(135deg, #e0e7ff 0%, #f8fafc 100%); min-height: 100vh;">
  <div class="container d-flex justify-content-center">
    <div class="card shadow-lg p-5" style="max-width: 900px; width: 100%; border-radius: 1.5rem;">
      <!-- Back to Blog -->
      <div class="mb-4">
        <%= link_to blog_path, class: "text-primary fw-semibold text-decoration-none" do %>
          <i class="fas fa-arrow-left me-2"></i>Back to Blog
        <% end %>
      </div>

      <!-- Article Header -->
      <div class="mb-4">
        <div class="d-flex align-items-center mb-2">
          <% if @article.featured? %>
            <span class="badge bg-primary me-2" style="font-size: 0.95rem;">Featured</span>
          <% end %>
          <span class="text-muted small"><i class="far fa-clock me-1"></i><%= @article.reading_time %></span>
        </div>
        <h1 class="fw-bold mb-2" style="color: #1d3557;"><%= @article.title %></h1>
        <div class="d-flex justify-content-between align-items-center text-muted mb-3" style="font-size: 1rem;">
          <span>By <strong><%= @article.author %></strong></span>
          <span><%= @article.published_at.strftime('%B %d, %Y') %></span>
        </div>
      </div>

      <!-- Article Content -->
      <div class="markdown-content mb-4" style="background: #fff; border-radius: 1rem; padding: 2rem; box-shadow: 0 2px 8px rgba(37,99,235,0.07);">
        <%= render_markdown(@article.content) %>
      </div>

      <!-- Medium CTA -->
      <div class="alert alert-primary d-flex align-items-center justify-content-between mb-4" style="border-radius: 1rem;">
        <div>
          <strong>Find more articles like this on our Medium</strong>
          <div class="small text-muted">Discover more insights, stories, and updates from the RentWise team.</div>
        </div>
        <%= link_to "Visit Medium", "https://medium.com/@yourprofile", target: "_blank", class: "btn btn-primary ms-3" %>
      </div>

      <!-- Share Section -->
      <div class="pt-4 border-top">
        <h5 class="fw-semibold mb-3" style="color: #1d3557;">Share this article</h5>
        <div class="d-flex gap-3">
          <a href="https://twitter.com/intent/tweet?text=<%= URI.encode_www_form_component(@article.title) %>&url=<%= URI.encode_www_form_component(request.original_url) %>"
             target="_blank"
             class="btn btn-outline-primary btn-sm fw-bold">
            <i class="fab fa-twitter me-1"></i>Twitter
          </a>
          <a href="https://www.linkedin.com/sharing/share-offsite/?url=<%= URI.encode_www_form_component(request.original_url) %>"
             target="_blank"
             class="btn btn-outline-info btn-sm fw-bold">
            <i class="fab fa-linkedin me-1"></i>LinkedIn
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

