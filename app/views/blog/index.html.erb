<div class="container mx-auto px-4 py-8">
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">RentWise Blog</h1>
    <p class="text-xl text-gray-600 max-w-2xl mx-auto">
      Insights, updates, and stories from our journey in property management technology
    </p>
  </div>

  <% if @articles.any? %>
    <!-- Featured Articles -->
    <% featured_articles = @articles.featured.limit(2) %>
    <% if featured_articles.any? %>
      <div class="mb-12">
        <h2 class="text-2xl font-semibold text-gray-800 mb-6">Featured Articles</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <% featured_articles.each do |article| %>
            <div class="bg-white rounded-lg shadow-lg overflow-hidden border border-gray-200 hover:shadow-xl transition-shadow duration-300">
              <div class="p-6">
                <div class="flex items-center mb-3">
                  <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded">Featured</span>
                  <span class="text-gray-500 text-sm ml-3"><%= article.reading_time %></span>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-3">
                  <%= link_to article.title, blog_article_path(article), class: "hover:text-blue-600 transition-colors" %>
                </h3>
                <p class="text-gray-600 mb-4"><%= article.excerpt %></p>
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-500">By <%= article.author %></span>
                  <span class="text-sm text-gray-500"><%= article.published_at.strftime("%B %d, %Y") %></span>
                </div>
                <% if article.medium_url.present? %>
                  <div class="mt-4">
                    <%= link_to "Read on Medium", article.medium_url, target: "_blank", class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- All Articles -->
    <div>
      <h2 class="text-2xl font-semibold text-gray-800 mb-6">All Articles</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @articles.each do |article| %>
          <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200 hover:shadow-lg transition-shadow duration-300">
            <div class="p-6">
              <div class="flex items-center mb-3">
                <% if article.featured? %>
                  <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded mr-2">Featured</span>
                <% end %>
                <span class="text-gray-500 text-sm"><%= article.reading_time %></span>
              </div>
              <h3 class="text-lg font-bold text-gray-900 mb-3">
                <%= link_to article.title, blog_article_path(article), class: "hover:text-blue-600 transition-colors" %>
              </h3>
              <p class="text-gray-600 mb-4 text-sm"><%= article.excerpt %></p>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-500">By <%= article.author %></span>
                <span class="text-sm text-gray-500"><%= article.published_at.strftime("%B %d, %Y") %></span>
              </div>
              <% if article.medium_url.present? %>
                <div class="mt-4">
                  <%= link_to "Read on Medium", article.medium_url, target: "_blank", class: "text-blue-600 hover:text-blue-800 text-sm font-medium" %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="text-center py-12">
      <div class="text-gray-400 text-6xl mb-4">üìù</div>
      <h3 class="text-xl font-semibold text-gray-700 mb-2">No articles yet</h3>
      <p class="text-gray-500">Check back soon for our latest insights and updates!</p>
    </div>
  <% end %>
</div>
