<div class="blog-index-bg py-5" style="background: linear-gradient(135deg, #e0e7ff 0%, #f8fafc 100%); min-height: 100vh;">
  <div class="container">
    <div class="text-center mb-5">
      <h1 class="display-4 fw-bold mb-2" style="color: #2563eb;">RentWise Blog</h1>
      <p class="lead text-muted mb-0">Insights, updates, and stories from our journey in property management technology</p>
    </div>

    <% if @articles.any? %>
      <!-- Featured Articles -->
      <% featured_articles = @articles.featured.limit(2) %>
      <% if featured_articles.any? %>
        <div class="mb-5">
          <h2 class="fw-bold mb-4" style="color: #1d3557;">Featured Articles</h2>
          <div class="row g-4">
            <% featured_articles.each do |article| %>
              <div class="col-md-6">
                <div class="card shadow-sm h-100 border-0 featured-article" style="border-radius: 1.25rem;">
                  <div class="card-body">
                    <div class="d-flex align-items-center mb-2">
                      <span class="badge bg-primary me-2">Featured</span>
                      <span class="text-muted small"><i class="far fa-clock me-1"></i><%= article.reading_time %></span>
                    </div>
                    <h3 class="card-title fw-bold mb-2" style="color: #1d3557;">
                      <%= link_to article.title, blog_article_path(article), class: "text-decoration-none text-dark" %>
                    </h3>
                    <p class="card-text text-muted mb-3"><%= article.excerpt %></p>
                    <div class="d-flex justify-content-between align-items-center mb-2" style="font-size: 0.95rem;">
                      <span>By <strong><%= article.author %></strong></span>
                      <span><%= article.published_at.strftime('%B %d, %Y') %></span>
                    </div>
                    <% if article.medium_url.present? %>
                      <%= link_to "Read on Medium", article.medium_url, target: "_blank", class: "btn btn-outline-primary btn-sm" %>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- All Articles -->
      <div>
        <h2 class="fw-bold mb-4" style="color: #1d3557;">All Articles</h2>
        <div class="row g-4">
          <% @articles.each do |article| %>
            <div class="col-md-6 col-lg-4">
              <div class="card shadow-sm h-100 border-0 blog-card" style="border-radius: 1.25rem;">
                <div class="card-body">
                  <div class="d-flex align-items-center mb-2">
                    <% if article.featured? %>
                      <span class="badge bg-primary me-2">Featured</span>
                    <% end %>
                    <span class="text-muted small"><i class="far fa-clock me-1"></i><%= article.reading_time %></span>
                  </div>
                  <h4 class="card-title fw-bold mb-2" style="color: #1d3557;">
                    <%= link_to article.title, blog_article_path(article), class: "text-decoration-none text-dark" %>
                  </h4>
                  <p class="card-text text-muted mb-3"><%= article.excerpt %></p>
                  <div class="d-flex justify-content-between align-items-center mb-2" style="font-size: 0.95rem;">
                    <span>By <strong><%= article.author %></strong></span>
                    <span><%= article.published_at.strftime('%B %d, %Y') %></span>
                  </div>
                  <% if article.medium_url.present? %>
                    <%= link_to "Read on Medium", article.medium_url, target: "_blank", class: "btn btn-outline-primary btn-sm" %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="text-gray-400 text-6xl mb-4">üìù</div>
        <h3 class="text-xl fw-bold text-gray-700 mb-2">No articles yet</h3>
        <p class="text-muted">Check back soon for our latest insights and updates!</p>
      </div>
    <% end %>
  </div>
</div>
