<div class="d-flex align-items-center justify-content-center min-vh-100 bg-light">
  <div class="card shadow-lg p-4" style="max-width: 450px; width: 100%; border-radius: 1.25rem;">
    <div class="text-center mb-4">
      <i class="fas fa-user-plus fa-3x text-primary mb-2"></i>
      <h2 class="fw-bold mb-2">Sign Up</h2>
      <p class="text-muted mb-0">Create your RentWise account</p>
    </div>
    <%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), local: true) do |f| %>
      <% if resource.errors.any? %>
        <div class="alert alert-danger text-center py-2">
          <ul class="mb-0">
            <% resource.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="mb-3">
        <%= f.label :name, class: "form-label fw-semibold" %>
        <%= f.text_field :name, autofocus: true, class: "form-control form-control-lg rounded-pill" %>
      </div>
      <div class="mb-3">
        <%= f.label :email, class: "form-label fw-semibold" %>
        <%= f.email_field :email, autocomplete: "email", class: "form-control form-control-lg rounded-pill" %>
      </div>
      <div class="mb-3">
        <%= f.label :role, class: "form-label fw-semibold" %>
        <%= f.select :role, options_for_select([["Landlord", "landlord"], ["Caretaker", "caretaker"], ["Tenant", "tenant"]], f.object.role), {}, class: "form-select form-select-lg rounded-pill" %>
  </div>
      <div class="mb-3">
        <%= f.label :password, class: "form-label fw-semibold" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg rounded-pill" %>
  </div>
      <div class="mb-3">
        <%= f.label :password_confirmation, class: "form-label fw-semibold" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg rounded-pill" %>
  </div>
      <div class="d-grid mb-3">
        <%= f.submit "Sign up", class: "btn btn-primary btn-lg rounded-pill fw-bold" %>
  </div>
      <div class="text-center">
        <%= link_to "Log in", new_session_path(resource_name), class: "text-decoration-none" %>
  </div>
    <% end %>
  </div>
  </div>
<style>
  body { background: #f8fafc !important; }
</style>
