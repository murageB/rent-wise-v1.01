<!-- Hero Section -->
<section class="hero-section">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <h1>Smart Property Management</h1>
        <p class="lead mb-4">Revolutionize your property management with blockchain technology. Secure, transparent, and efficient solutions for landlords, tenants, and caretakers.</p>
        <div class="d-flex gap-3">
          <% if user_signed_in? %>
            <a href="/dashboard" class="btn btn-light btn-lg">
              <i class="fas fa-tachometer-alt me-2"></i>Go to Dashboard
            </a>
          <% else %>
            <a href="/users/sign_up" class="btn btn-light btn-lg">
              <i class="fas fa-rocket me-2"></i>Get Started
            </a>
            <a href="/users/sign_in" class="btn btn-outline-light btn-lg">
              <i class="fas fa-sign-in-alt me-2"></i>Sign In
            </a>
          <% end %>
        </div>
      </div>
      <div class="col-lg-6 text-center">
        <i class="fas fa-building" style="font-size: 15rem; opacity: 0.3;"></i>
      </div>
    </div>
  </div>
</section>

