<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card">
        <div class="card-header text-center">
          <h3 class="mb-0">
            <i class="fas fa-user-plus me-2"></i>Create Your Account
          </h3>
          <p class="mb-0 mt-2 opacity-75">Join RentWise and start managing properties smarter</p>
        </div>
        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="row">
              <div class="col-md-6 mb-3">
                <div class="form-group">
                  <%= f.label :name, class: "form-label fw-semibold" %>
                  <div class="input-group">
                    <span class="input-group-text">
                      <i class="fas fa-user"></i>
                    </span>
                    <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Enter your full name' %>
                  </div>
                </div>
              </div>

              <div class="col-md-6 mb-3">
                <div class="form-group">
                  <%= f.label :email, class: "form-label fw-semibold" %>
                  <div class="input-group">
                    <span class="input-group-text">
                      <i class="fas fa-envelope"></i>
                    </span>
                    <%= f.email_field :email, autocomplete: "email", class: 'form-control', placeholder: 'Enter your email' %>
                  </div>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <div class="form-group">
                  <%= f.label :role, class: "form-label fw-semibold" %>
                  <div class="input-group">
                    <span class="input-group-text">
                      <i class="fas fa-user-tag"></i>
                    </span>
                    <%= f.select :role, User.roles.keys.map { |r| [r.titleize, r] }, {}, class: 'form-select' %>
                  </div>
                </div>
              </div>

              <div class="col-md-6 mb-3">
                <div class="form-group">
                  <%= f.label :phone, class: "form-label fw-semibold" %>
                  <div class="input-group">
                    <span class="input-group-text">
                      <i class="fas fa-phone"></i>
                    </span>
                    <%= f.text_field :phone, class: 'form-control', placeholder: 'Enter your phone number' %>
                  </div>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <div class="form-group">
                  <%= f.label :password, class: "form-label fw-semibold" %>
                  <div class="input-group">
                    <span class="input-group-text">
                      <i class="fas fa-lock"></i>
                    </span>
                    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'Create a password' %>
                  </div>
                  <% if @minimum_password_length %>
                    <small class="form-text text-muted">
                      <i class="fas fa-info-circle me-1"></i>Minimum <%= @minimum_password_length %> characters
                    </small>
                  <% end %>
                </div>
              </div>

              <div class="col-md-6 mb-3">
                <div class="form-group">
                  <%= f.label :password_confirmation, class: "form-label fw-semibold" %>
                  <div class="input-group">
                    <span class="input-group-text">
                      <i class="fas fa-lock"></i>
                    </span>
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Confirm your password' %>
                  </div>
                </div>
              </div>
            </div>

            <div class="d-grid gap-2 mt-4">
              <%= f.submit "Create Account", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="text-center">
            <p class="mb-0">
              Already have an account? 
              <%= link_to "Sign In", new_user_session_path, class: "text-decoration-none fw-semibold" %>
            </p>
          </div>
        </div>
      </div>

      <!-- Feature highlights -->
      <div class="row mt-4">
        <div class="col-md-4">
          <div class="feature-card">
            <div class="feature-icon">
              <i class="fas fa-shield-alt"></i>
            </div>
            <h6 class="fw-semibold">Secure</h6>
            <small class="text-muted">Blockchain-powered security</small>
          </div>
        </div>
        <div class="col-md-4">
          <div class="feature-card">
            <div class="feature-icon">
              <i class="fas fa-chart-line"></i>
            </div>
            <h6 class="fw-semibold">Smart</h6>
            <small class="text-muted">AI-driven insights</small>
          </div>
        </div>
        <div class="col-md-4">
          <div class="feature-card">
            <div class="feature-icon">
              <i class="fas fa-mobile-alt"></i>
            </div>
            <h6 class="fw-semibold">Mobile</h6>
            <small class="text-muted">Access anywhere</small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
